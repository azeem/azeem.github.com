<?xml version="1.0"?>
<rss version="2.0">
    <channel>
        <title>{{meta.title}}</title>
        <link>{{meta.site_link}}</link>
        <description>{{meta.description}}</description>
        {% for post in fileContexts|having("category","blog")|sortBy("publishTime")|reverse %}
            <item>
                <title>{{post.title}}</title>
                <link>{{post.link}}</link>
                <guid>{{post.link}}</guid>
                <description>
                    <![CDATA[
                        {{post.summary|raw}}
                    ]]>
                </description>
            </item>
        {% endfor %}
    </channel>
</rss>
